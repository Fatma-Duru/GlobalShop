
@{
    ViewBag.Title = "Details";
}

<div class="row">
    <!-- Ürün Görseli -->
    <div class="col-md-6">
        <img src="img/saat.jpg" class="img-fluid rounded" alt="Rolex Submariner">
    </div>

    <!-- Ürün Detayları -->
    <div class="col-md-6">
        <!-- Başlık -->
        <div class="row mt-2">
            <div class="col-md-12">
                <h1>Rolex Submariner - Model No: 126610LN</h1>
            </div>
        </div>

        <!-- Stok Bilgisi -->
        <div class="row mt-3">
            <div class="col-md-12">
                <span class="badge badge-primary">In Stock</span>
                <span class="product-number">#526454512</span>
            </div>
        </div>

        <!-- Açıklama -->
        <div class="row mt-2">
            <div class="col-md-12">
                <div class="product-description">
                    <p>Rolex Submariner - Model No: 126610LN, lüks dalış saatleri kategorisinde ikonik bir modeldir.</p>
                    <ul>
                        <li><strong>Kasa Çapı:</strong> 41 mm</li>
                        <li><strong>Kasa Malzemesi:</strong> Paslanmaz Çelik (Oystersteel)</li>
                        <li><strong>Bezel:</strong> Siyah, seramik</li>
                        <li><strong>Kadran:</strong> Siyah, Chromalight indeksler</li>
                        <li><strong>Mekanizma:</strong> Otomatik (Calibre 3235)</li>
                        <li><strong>Su Geçirmezlik:</strong> 300 metre</li>
                        <li><strong>Cam:</strong> Çizilmeye dayanıklı safir</li>
                    </ul>
                </div>
            </div>
        </div>

        <!-- Puanlama -->
        <div class="row mt-2">
            <div class="col-md-4">
                <i class="fa fa-star"></i><i class="fa fa-star"></i><i class="fa fa-star"></i><i class="fa fa-star"></i><i class="fa fa-star-half-o"></i>
                <span class="badge badge-success">24</span>
            </div>
            <div id="write-review" class="col-md-4">
                <a href="#">Write a review</a>
            </div>
        </div>

        <!-- Fiyat ve Sepete Ekle -->
        <div class="row mt-3">
            <div class="col-md-12">
                <h4 id="product-price">€524</h4>
                <button class="btn btn-success">
                    <i class="fa fa-cart-arrow-down" aria-hidden="true"></i> Add To Cart
                </button>
            </div>
        </div>
    </div>
</div>

<!-- Sekmeler -->
<div class="row mt-3">
    <div class="col-md-12">
        <div class="bd-example bd-example-tabs">
            <ul class="nav nav-tabs mb-3" id="pills-tab" role="tablist">
                <li class="nav-item">
                    <a class="nav-link active" id="pills-description-tab" data-toggle="pill" href="#pills-description" role="tab" aria-controls="pills-description" aria-selected="true">Description</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" id="pills-payment-tab" data-toggle="pill" href="#pills-payment" role="tab" aria-controls="pills-payment" aria-selected="false">Payment Methods</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" id="pills-comment-tab" data-toggle="pill" href="#pills-comment" role="tab" aria-controls="pills-comment" aria-selected="false">Reviews</a>
                </li>
            </ul>

            <div class="tab-content" id="pills-tabContent">
                <div class="tab-pane fade show active" id="pills-description" role="tabpanel" aria-labelledby="pills-description-tab">
                    <p>Açıklama burada yer alacak.</p>
                </div>
                <div class="tab-pane fade" id="pills-payment" role="tabpanel" aria-labelledby="pills-payment-tab">
                    <p>Ödeme yöntemleri burada yer alacak.</p>
                </div>
                <div class="tab-pane fade" id="pills-comment" role="tabpanel" aria-labelledby="pills-comment-tab">
                    <p>Yorumlar burada yer alacak.</p>
                </div>
            </div>
        </div>
    </div>
</div>

