@model IEnumerable<GlobalShop.Entity.Category>
@{
    var selectedCategory = Url.RequestContext.RouteData.Values["id"];
}

<ul class="list-group">
    <!-- Tüm Kategoriler Bağlantısı -->
    <a href="/Home/List" class="list-group-item" style="background-color: #42a5f5; color: white; font-weight: bold;">
        <i class="fa fa-angle-right" aria-hidden="true"></i>
        Tüm Kategoriler
    </a>

    @foreach (var item in Model)
    {
        var isActive = selectedCategory != null && item.Id == int.Parse(selectedCategory.ToString());
        var linkClass = isActive ? "list-group-item active" : "list-group-item";

        <a href="/Home/List/@item.Id" class="@linkClass" style="background-color: @(isActive ? "#6f42c1" : "#ffffff"); color: @(isActive ? "white" : "#6f42c1"); font-weight: @(isActive ? "bold" : "normal");">
            <i class="fa fa-angle-right" aria-hidden="true"></i>
            @item.Name
        </a>
    }
</ul>
