@using GlobalShop.Models
@model IEnumerable<ProductModel>
@{
    ViewBag.Title = "List";
}

<div class="container pb-5">

    <div class="row">
        <!-- Sol Menü -->
        <div class="col-md-3" style="background-color: #ffffff; border-radius: 10px; padding: 20px; color: #6f42c1;">
            @Html.Action("GetCategories", "Home")
        </div>


        <!-- Kart -->
        <div class="col-md-9">

            @if (Model.Count() == 0)
            {
                <div class="alert alert-warning" role="alert" style="background-color: #ff4081; color: white; border-radius: 5px;">
                    <i class="fa fa-exclamation-circle" aria-hidden="true"></i>
                    Bu kategoride bir ürün bulunamadı.
                </div>
            }
            else
            {
                <div class="alert alert-info" role="alert" style="background-color: #42a5f5; color: white; border-radius: 5px;">
                    <i class="fa fa-check" aria-hidden="true"></i>
                    <strong>@Model.Count() adet</strong>  ürün bulundu.
                </div>
            }

            @Html.Partial("_ProductList", Model)

        </div>
    </div>
</div>
