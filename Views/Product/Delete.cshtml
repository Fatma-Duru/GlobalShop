@model GlobalShop.Entity.Product

@{
    ViewBag.Title = "Sil";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container">
    <h2 class="text-purple">Bu ürünü silmek istediğinizden emin misiniz?</h2>
    <hr />

    <div class="card">
        <div class="card-header bg-blue text-dark">
            <!-- Burada text-dark kullandık -->
            Ürün Bilgileri
        </div>
        <div class="card-body">
            <dl class="row">
                <!-- Ürün Adı -->
                <dt class="col-sm-4">Ürün Adı</dt>
                <dd class="col-sm-8 text-dark">@Html.DisplayFor(model => model.Name)</dd>
            </dl>
        </div>
    </div>

    <div class="mt-3">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <button type="submit" class="btn btn-danger">Sil</button>
            @Html.ActionLink("Geri Dön", "Index", null, new { @class = "btn btn-primary ml-2" })
        }
    </div>
</div>

<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
