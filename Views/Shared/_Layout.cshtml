<!doctype html>
<html lang="en">

<head>
    <!-- Sayfanın karakter setini belirtir -->
    <meta charset="utf-8">

    <!-- Sayfanın mobil cihazlara uyumlu olmasını sağlar -->
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- FontAwesome ikon seti bağlantısı -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0/css/all.min.css" />

    <!-- Bootstrap CSS dosyasının bağlantısı -->
    <link rel="stylesheet"
          href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css"
          integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm"
          crossorigin="anonymous">

    <!-- Sayfanın kendi stil dosyasına bağlantı -->
    <link rel="stylesheet" href="/theme/css/style.css">
</head>

<body>
    <!-- Navigasyon çubuğu (Navbar) -->
    <nav class="navbar navbar-expand-lg ">
        <div class="container">
            <!-- Navbar başlık kısmı -->
            <a class="navbar-brand" href="/">Ürün Katolog</a>

            <!-- Mobil cihazlar için menü toggle butonu -->
            <button class="navbar-toggler"
                    type="button"
                    data-toggle="collapse"
                    data-target="#navbarColor01"
                    aria-controls="navbarColor01"
                    aria-expanded="false"
                    aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <!-- Menüyü gizleyip açmak için kullanılan alan -->
            <div class="collapse navbar-collapse" id="navbarColor01">
                <ul class="navbar-nav mr-auto">
                    <!-- Menü öğeleri -->
                    <li class="nav-item active">
                        <a class="nav-link" href="/">Anasayfa <span class="sr-only">(current)</span></a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Home/List">Ürünler</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Home/About">Hakkımızda</a>
                    </li>
                </ul>
                @Html.Action("Summary","Cart")
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </nav>

    <!-- Sayfanın içeriği buraya gelecek -->
    <div class="container mt-4">
        @RenderBody()
    </div>


    <!-- Footer (Altbilgi) kısmı -->
    <footer class="footer">
        <div class="container">
           
        </div>
    </footer>

    <!-- JavaScript dosyaları -->
    <!-- JQuery ve Bootstrap için gerekli JS dosyaları -->
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js"
            integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN"
            crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.12.9/dist/umd/popper.min.js"
            integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q"
            crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js"
            integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl"
            crossorigin="anonymous"></script>
    <!-- Placeholder için JS dosyası -->
    <script src="js/holder.min.js" type="text/javascript"></script>
</body>

</html>
